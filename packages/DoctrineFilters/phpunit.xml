<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <testsuites>
        <testsuite>
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <!-- listener to run after every single test -->
    <listeners>
        <listener class="Zenify\DoctrineFilters\Tests\Adapter\Symfony\PHPUnit\Listener\ClearLogAndCacheTestListener" />
    </listeners>
</phpunit>
