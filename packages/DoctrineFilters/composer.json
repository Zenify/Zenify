{
	"name": "zenify/doctrine-filters",
	"description": "Modular Doctrine Filters integration into Nette and Symfony.",
	"license": "MIT",
	"authors": [
		{ "name": "Tomáš Votruba", "homepage": "http://tomasvotruba.cz" }
	],
	"require": {
		"php": "^7.0",
		"doctrine/orm": "^2.5",
		"nette/application": "^2.4",
		"nette/di": "^2.4",
		"symplify/symfony-event-dispatcher": "^1.3",

		"doctrine/dbal": "^2.4",
		"symfony/config": "^3.2",
		"symfony/dependency-injection": "^3.2",
		"symfony/event-dispatcher": "^3.2",
		"symfony/http-kernel": "^3.2"
	},
	"require-dev": {
		"kdyby/doctrine": "^3.1",
		"nette/bootstrap": "^2.4",
		"symfony/console": "^3.2",

		"doctrine/doctrine-bundle": "^1.6",
		"nette/utils": "^2.4",
		"nette/finder": "^2.4",
		"symfony/form": "^3.2",
		"symfony/framework-bundle": "^3.2",
		"symfony/validator": "^3.2",
		"twig/twig": "^1.30",

		"tracy/tracy": "^2.4",
		"zenify/coding-standard": "^4.2",
		"phpunit/phpunit": "^5.7"
	},
	"autoload": {
		"psr-4": {
			"Zenify\\DoctrineFilters\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Zenify\\DoctrineFilters\\Tests\\": "tests"
		}
	},
	"scripts": {
		"check-cs": "vendor/bin/phpcs src tests -ps --standard=vendor/zenify/coding-standard/src/ZenifyCodingStandard/ruleset.xml",
		"fix-cs": "vendor/bin/phpcbf src tests --standard=vendor/zenify/coding-standard/src/ZenifyCodingStandard/ruleset.xml"
	}
}
