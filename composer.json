{
    "name": "zenify/zenify",
    "description": "Main repository for Zenify packages development.",
    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/di": "^2.4",
        "latte/latte": "^2.4"
    },
    "require-dev": {
        "nette/application": "^2.4",
        "nette/bootstrap": "^2.4",
        "tracy/tracy": "^2.4",
        "phpunit/phpunit": "^5.6",
        "zenify/coding-standard": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Zenify\\ModularLatteFilters\\": "packages/ModularLatteFilters/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zenify\\ModularLatteFilters\\Tests\\": "packages/ModularLatteFilters/tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/phpcs packages -ps --standard=vendor/zenify/coding-standard/src/ZenifyCodingStandard/ruleset.xml"
    }
}
